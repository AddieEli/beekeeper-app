  <h3>Foraging Distance</h3>
    <div id="map"></div>
    <script>

      var citymap = {
        <%= @hive.hive_city %>:{
          center: {lat: <%= @hive.latitude %>, 
                  lng: <%= @hive.longitude %>
          }
        }
      };

      function initMap() {
        // Create the map.
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: {lat: <%= @hive.latitude %>, lng: <%= @hive.longitude %> },
          mapTypeId: 'terrain'
        });

        // Construct the circle for each value in citymap.
        // Note: We scale the area of the circle based on the population.
        for (var hive_city in citymap) {
          // Add the circle for this city to the map.
          var cityCircle = new google.maps.Circle({
            strokeColor: '#FF0000',
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: '#FF0000',
            fillOpacity: 0.35,
            map: map,
            center: citymap[hive_city].center,
            radius: 4828.03
          });
        }
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAOc24sApllxhbn4SF_ntEsMApDN26raEM&callback=initMap">
    </script>
  </body>





