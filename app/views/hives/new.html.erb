<h1>Add a Hive</h1>

<%= form_tag '/hives', method: :post do %>
<div>
  <%= label_tag :hive_name %>
  <%= text_field_tag :hive_name%>  
</div>
<div>
  <%= label_tag :bee_breed %>
  <%= text_field_tag :bee_breed %>  
</div>
<div>
  <%= label_tag :hive_style%>
  <%= text_field_tag :hive_style%>  
</div>
<div>
  <%= label_tag :parent_id %>
  <%= text_field_tag :parent_id %>
</div>
<div>
  <%= label_tag :hive_origin%>
  <%= text_field_tag :hive_origin %>  
</div>
<div>
  <%= label_tag :queen_origin%>
  <%= text_field_tag :queen_origin %>  
</div>
<div>
  <%= label_tag :hive_city %>
  <%= text_field_tag :hive_city %>  
</div>
<div>
  <%= label_tag :hive_state %>
  <%= text_field_tag :hive_state %>  
</div>
<%= submit_tag "Add Hive" %>

<% end %>


